generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Photo {
  id          Int       @id @default(autoincrement())
  name        String
  driveId     String    @unique
  url         String
  mainFaceId  String    @default("unknown")
  faceIds     String    @default("[]")  // JSON array stored as string for SQLite compatibility
  faceBoxes   String    @default("[]")  // JSON array stored as string for SQLite compatibility
  poseId      String    @default("unknown_pose")
  uploaderId  String?
  likeCount   Int       @default(0)
  timestamp   DateTime  @default(now())
  capturedAt  DateTime?              // EXIF original capture time
  deviceMake  String?                // Camera/phone manufacturer
  deviceModel String?                // Camera/phone model
  eventId     String?                // Foreign key to Event
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  likes       PhotoLike[]
  event       Event?    @relation(fields: [eventId], references: [id])

  @@index([driveId])
  @@index([mainFaceId])
  @@index([poseId])
  @@index([uploaderId])
  @@index([timestamp])
  @@index([likeCount])
  @@index([capturedAt])
  @@index([eventId])
  @@index([deviceModel])
}

model Face {
  faceId            String   @id
  descriptors       String   @default("[]")  // JSON array stored as string for SQLite compatibility
  descriptor        String   @default("[]")  // JSON array stored as string for SQLite compatibility
  metadata          String   @default("{}")  // JSON object stored as string for SQLite compatibility
  thumbnailDriveId  String?
  lastSeen          DateTime @default(now())
  photoCount        Int      @default(0)
  sampleCount       Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([photoCount])
  @@index([lastSeen])
}

model Challenge {
  id          String    @id
  title       String
  instruction String
  image       String
  folderId    String?
  order       Int       @default(0)
  points      Int       @default(10)     // Points awarded for completing this challenge
  startTime   DateTime? // Challenge becomes active at this time (null = always active)
  endTime     DateTime? // Challenge expires at this time (null = never expires)
  bonusPoints Int       @default(0)      // Extra points during active window
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([title])
  @@index([order])
  @@index([startTime])
  @@index([endTime])
}

model PhotoLike {
  id         Int      @id @default(autoincrement())
  photoId    Int
  userId     String   // Browser fingerprint or session ID
  createdAt  DateTime @default(now())
  photo      Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@unique([photoId, userId])
  @@index([photoId])
  @@index([userId])
}

model Event {
  id          String   @id @default(cuid())
  name        String
  description String?
  startTime   DateTime
  endTime     DateTime
  color       String   @default("#3B82F6")  // Hex color for UI
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  photos      Photo[]

  @@index([startTime])
  @@index([order])
}

model AppSettings {
  id               String   @id @default("app_settings")  // Singleton pattern

  // Feature Flags (all default false for opt-in)
  gamification     Boolean  @default(false)  // Points, leaderboard, challenges
  events           Boolean  @default(false)  // Event timeline and management
  faceDetection    Boolean  @default(false)  // Face recognition and filtering
  photoLikes       Boolean  @default(false)  // Like/unlike photos
  bulkUpload       Boolean  @default(false)  // Regular photo uploads

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model UserScore {
  id                  Int       @id @default(autoincrement())
  userId              String    @unique  // From getUserId()
  totalPoints         Int       @default(0)
  completedChallenges String    @default("[]")  // JSON array of challenge IDs
  nickname            String?   // Optional custom name
  lastEarned          DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([totalPoints])
  @@index([userId])
}
