generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Photo {
  id          Int       @id @default(autoincrement())
  name        String
  driveId     String    @unique
  url         String
  mainFaceId  String    @default("unknown")
  faceIds     String    @default("[]")  // JSON array stored as string for SQLite compatibility
  faceBoxes   String    @default("[]")  // JSON array stored as string for SQLite compatibility
  poseId      String    @default("unknown_pose")
  uploaderId  String?
  likeCount   Int       @default(0)
  timestamp   DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  likes       PhotoLike[]

  @@index([driveId])
  @@index([mainFaceId])
  @@index([poseId])
  @@index([uploaderId])
  @@index([timestamp])
  @@index([likeCount])
}

model Face {
  faceId            String   @id
  descriptors       String   @default("[]")  // JSON array stored as string for SQLite compatibility
  descriptor        String   @default("[]")  // JSON array stored as string for SQLite compatibility
  metadata          String   @default("{}")  // JSON object stored as string for SQLite compatibility
  thumbnailDriveId  String?
  lastSeen          DateTime @default(now())
  photoCount        Int      @default(0)
  sampleCount       Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([photoCount])
  @@index([lastSeen])
}

model Challenge {
  id          String   @id
  title       String
  instruction String
  image       String
  folderId    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([title])
  @@index([order])
}

model PhotoLike {
  id         Int      @id @default(autoincrement())
  photoId    Int
  userId     String   // Browser fingerprint or session ID
  createdAt  DateTime @default(now())
  photo      Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@unique([photoId, userId])
  @@index([photoId])
  @@index([userId])
}
